				{
					"name": "Verify OTP",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Store auth token for subsequent requests",
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.session && response.session.accessToken) {",
									"        pm.environment.set('authToken', response.session.accessToken);",
									"        pm.environment.set('refreshToken', response.session.refreshToken);",
									"        pm.environment.set('sessionId', response.session.sessionId);",
									"        console.log('Auth tokens stored successfully');",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
