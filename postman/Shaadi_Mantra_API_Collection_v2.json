{
  "info": {
    "name": "Shaadi Mantrana API Collection",
    "description": "Complete API collection for testing Shaadi Mantrana backend endpoints in both Static and MongoDB modes",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url_static",
      "value": "http://localhost:3500",
      "description": "Base URL for Static/Demo mode"
    },
    {
      "key": "base_url_dev", 
      "value": "http://localhost:5500",
      "description": "Base URL for Dev mode"
    },
    {
      "key": "base_url_prod", 
      "value": "http://localhost:5500",
      "description": "Base URL for Prod mode"
    },
    {
      "key": "auth_token",
      "value": "",
      "description": "JWT token received after authentication"
    },
    {
      "key": "test_email",
      "value": "niteshkumar9591@gmail.com",
      "description": "Test email for authentication"
    },
    {
      "key": "demo_otp",
      "value": "123456",
      "description": "Demo OTP for static mode testing"
    }
  ],
  "item": [
    {
      "name": "1. Health & Status",
      "item": [
        {
          "name": "Health Check (Static)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url_static}}/health",
              "host": ["{{base_url_static}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "Health Check (MongoDB)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url_mongodb}}/health",
              "host": ["{{base_url_mongodb}}"],
              "path": ["health"]
            }
          }
        }
      ]
    },
    {
      "name": "2. Authentication",
      "item": [
        {
          "name": "Send OTP (Static)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{test_email}}\"\n}"
            },
            "url": {
              "raw": "{{base_url_static}}/api/auth/send-otp",
              "host": ["{{base_url_static}}"],
              "path": ["api", "auth", "send-otp"]
            }
          }
        },
        {
          "name": "Verify OTP (Static)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"otp\": \"{{demo_otp}}\"\n}"
            },
            "url": {
              "raw": "{{base_url_static}}/api/auth/verify-otp",
              "host": ["{{base_url_static}}"],
              "path": ["api", "auth", "verify-otp"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Store the auth token for subsequent requests",
                  "const jsonData = pm.response.json();",
                  "if (jsonData.session && jsonData.session.accessToken) {",
                  "    pm.collectionVariables.set('auth_token', jsonData.session.accessToken);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "3. Profiles (Auth Required)",
      "item": [
        {
          "name": "Get All Profiles (Static)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url_static}}/api/profiles?page=1&limit=10",
              "host": ["{{base_url_static}}"],
              "path": ["api", "profiles"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get My Profile (Static)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url_static}}/api/profiles/me",
              "host": ["{{base_url_static}}"],
              "path": ["api", "profiles", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "4. Admin Endpoints",
      "item": [
        {
          "name": "Check Email Approval (Static)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{test_email}}\"\n}"
            },
            "url": {
              "raw": "{{base_url_static}}/api/admin/check-email",
              "host": ["{{base_url_static}}"],
              "path": ["api", "admin", "check-email"]
            }
          }
        },
        {
          "name": "Create Invitation (Admin Only)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}", "type": "text" },
              { "key": "Content-Type", "value": "application/json", "type": "text" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{invitee_email}}\"\n}"
            },
            "url": {
              "raw": "{{base_url_dev}}/api/invitations",
              "host": ["{{base_url_dev}}"],
              "path": ["api", "invitations"]
            }
          }
        },
        {
          "name": "Get All Invitations (Admin Only)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}", "type": "text" }
            ],
            "url": {
              "raw": "{{base_url_dev}}/api/invitations",
              "host": ["{{base_url_dev}}"],
              "path": ["api", "invitations"]
            }
          }
        },
        {
          "name": "Get Invitation by Code",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}", "type": "text" }
            ],
            "url": {
              "raw": "{{base_url_dev}}/api/invitations/{{invitation_code}}",
              "host": ["{{base_url_dev}}"],
              "path": ["api", "invitations", "{{invitation_code}}"]
            }
          }
        },
        {
          "name": "Update Invitation (Accept/Decline/Resend)",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}", "type": "text" },
              { "key": "Content-Type", "value": "application/json", "type": "text" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"accepted\"\n}"
            },
            "url": {
              "raw": "{{base_url_dev}}/api/invitations/{{invitation_code}}",
              "host": ["{{base_url_dev}}"],
              "path": ["api", "invitations", "{{invitation_code}}"]
            }
          }
        },
        {
          "name": "Delete Invitation (Admin Only)",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}", "type": "text" }
            ],
            "url": {
              "raw": "{{base_url_dev}}/api/invitations/{{invitation_code}}",
              "host": ["{{base_url_dev}}"],
              "path": ["api", "invitations", "{{invitation_code}}"]
            }
          }
        },
        {
          "name": "Create Invitation (Admin Only, Preapproved Email)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}", "type": "text" },
              { "key": "Content-Type", "value": "application/json", "type": "text" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"preapproved@example.com\"\n}"
            },
            "url": {
              "raw": "{{base_url_dev}}/api/invitations",
              "host": ["{{base_url_dev}}"],
              "path": ["api", "invitations"]
            }
          }
        },
        {
          "name": "Create Invitation (Non-Admin, Should Fail)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{non_admin_auth_token}}", "type": "text" },
              { "key": "Content-Type", "value": "application/json", "type": "text" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"preapproved@example.com\"\n}"
            },
            "url": {
              "raw": "{{base_url_dev}}/api/invitations",
              "host": ["{{base_url_dev}}"],
              "path": ["api", "invitations"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 403\", function () {",
                  "    pm.response.to.have.status(403);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "List Invitations (Admin Only)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}", "type": "text" }
            ],
            "url": {
              "raw": "{{base_url_dev}}/api/invitations",
              "host": ["{{base_url_dev}}"],
              "path": ["api", "invitations"]
            }
          }
        },
        {
          "name": "Accept Invitation",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}", "type": "text" }
            ],
            "url": {
              "raw": "{{base_url_dev}}/api/invitations/{{invitation_code}}/accept",
              "host": ["{{base_url_dev}}"],
              "path": ["api", "invitations", "{{invitation_code}}", "accept"]
            }
          }
        },
        {
          "name": "Decline Invitation",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}", "type": "text" }
            ],
            "url": {
              "raw": "{{base_url_dev}}/api/invitations/{{invitation_code}}/decline",
              "host": ["{{base_url_dev}}"],
              "path": ["api", "invitations", "{{invitation_code}}", "decline"]
            }
          }
        },
        {
          "name": "Delete Invitation (Admin Only)",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}", "type": "text" }
            ],
            "url": {
              "raw": "{{base_url_dev}}/api/invitations/{{invitation_code}}",
              "host": ["{{base_url_dev}}"],
              "path": ["api", "invitations", "{{invitation_code}}"]
            }
          }
        }
      ]
    }
  ]
}

