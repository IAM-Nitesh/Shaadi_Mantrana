{
  "name": "shaadimantra-backend",
  "version": "1.0.0",
  "description": "Backend API for Shaadi Mantra matrimonial application",
  "main": "src/index.js",
  "scripts": {
    "start": "node start.js",
    "start:legacy": "node src/index.js",
    "dev": "NODE_ENV=development nodemon start.js",
    "dev:static": "NODE_ENV=development DATA_SOURCE=static nodemon start.js",
    "dev:mongodb": "NODE_ENV=development DATA_SOURCE=mongodb nodemon start.js",
    "dev:legacy": "NODE_ENV=development nodemon src/index.js",
    "dev:local": "NODE_ENV=local nodemon start.js",
    "dev:debug": "NODE_ENV=development DEBUG=* nodemon start.js",
    "prod": "NODE_ENV=production node start.js",
    "prod:static": "NODE_ENV=production DATA_SOURCE=static node start.js",
    "prod:mongodb": "NODE_ENV=production DATA_SOURCE=mongodb node start.js",
    "prod:legacy": "NODE_ENV=production node src/index.js",
    "build": "echo 'Backend build complete'",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:models": "NODE_ENV=development node test-models.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "env:check": "node scripts/check-env.js",
    "mode:static": "node scripts/switch-mode.js static",
    "mode:mongodb": "node scripts/switch-mode.js mongodb",
    "mode:status": "node scripts/switch-mode.js status",
    "mode:help": "node scripts/switch-mode.js help",
    "db:seed": "NODE_ENV=development node scripts/seed-database.js",
    "db:reset": "NODE_ENV=development node scripts/reset-database.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.18.0",
    "mongoose": "^7.5.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "typescript-eslint": "^8.38.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "matrimonial",
    "api",
    "express",
    "nodejs"
  ],
  "author": "Shaadi Mantra Team",
  "license": "MIT"
}
